<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="oval">
            <solid android:color="@color/primary_blue" /> <!-- pressed color -->
        </shape>
    </item>
    <item>
        <shape android:shape="oval">
            <solid android:color="@color/primary_blue" /> <!-- default color -->
        </shape>
    </item>
</selector>
